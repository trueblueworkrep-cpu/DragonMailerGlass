[Unit]
Description=Dragon Mailer - Streamlit Web Application
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/dragonmailer
Environment="PATH=/var/www/dragonmailer/venv/bin"
ExecStart=/var/www/dragonmailer/venv/bin/streamlit run app.py --server.port=8501 --server.address=127.0.0.1 --server.headless=true --server.enableCORS=false --server.enableXsrfProtection=false
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
